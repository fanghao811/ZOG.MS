@using ZOGLAB.MMMS.Localization
<div ng-controller="common.views.menuTree.index as vm">
    <div class="row margin-bottom-5">
        <div class="col-xs-12">
            <div class="page-head">
                <div class="page-title">
                    <h1>
                        <span>@*@L("LocationManage")*@菜单管理</span> <small>CRUD</small>
                    </h1>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-4">
            <div class="portlet light">
                <div class="portlet-title">
                    <div class="caption">
                        <span class="caption-subject bold uppercase">
                            菜单管理
                        </span>
                    </div>
                    <div class="actions">
                        <a @*ng-if="vm.permissions.managemenuTree"*@ ng-click="vm.menuTree.addUnit(null)" class="btn btn-circle btn-default">
                            <i class="fa fa-plus"></i> @L("AddRootUnit")
                        </a>
                    </div>
                </div>
                <div class="portlet-body">
                    <div id="MenuUnitEditTree"></div> @*<--菜单树flag*@
                    <div ng-if="!vm.menuTree.unitCount" class="text-muted">
                        @L("NoOrganizationUnitDefinedYet")
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-8">
            <div class="portlet light">
                <div class="portlet-title">
                    <div class="caption">
                        <span class="caption-subject bold uppercase">
                            @*@L("Members")*@
                            <span ng-if="vm.menuTree.selectedOu.displayName">: {{vm.menuTree.selectedOu.displayName}}</span>
                        </span>
                    </div>
                    <div class="actions" ng-if="vm.menuTree.selectedOu.id">
                        <a  data-ui-sref="productEdited" class="btn btn-circle btn-default">
                            <i class="fa fa-plus"></i> 
                        </a>
                        @*<a ng-click="vm.getProduct(4)" class="btn btn-circle btn-default">
                            <i class="fa fa-plus"></i> 
                        </a>*@
                    </div>
                </div>
                <div class="portlet-body">
                    @*<div ng-if="vm.menuTree.selectedOu.id" ui-grid="vm.productGridOptions" ui-grid-pagination ui-grid-resize-columns dir=@(CultureHelper.IsRtl ? "rtl" : "")></div>
                    <div ng-if="!vm.menuTree.selectedOu.id" class="text-muted">
                        @L("SelectAnOrganizationUnitToSeeMembers")
                    </div>*@
                </div>
            </div>
        </div>
    </div>
</div>